.challengeRoom(
  ng-controller="ChallengeRoomController"
)

  md-card(
    md-theme="dark-grey"
    ng-if="contentMap[roomPointer].data.type == 'Multiple Choice'"
  )
    md-card-title
      md-card-title-text
        span.md-headline
          | Challenge ({{contentMap[roomPointer].data.type}})

    md-card-content

      section(
        layout="row" 
        layout-align="space-between center"
        ng-repeat="exercise in contentMap[roomPointer].data.exercises"
      )  

        .question {{exercise.statement}}

        md-input-container
          md-select(
            ng-model="exercise.selectedAnswer"
            placeholder="Please select"
          )
            md-option(
              ng-repeat="option in exercise.options"
              ng-value="option" 
            ) {{option}}

      md-button.md-raised.md-warn(
        ng-click="multipleChoiceValidate(contentMap)" 
      ) Submit


  md-card(
    md-theme="dark-grey"
    ng-if="contentMap[roomPointer].data.type == 'Find the Word'"
  )
    md-card-title
      md-card-title-text
        span.md-headline
          | Challenge ({{contentMap[roomPointer].data.type}})

    md-card-content

      section(
        layout="row" 
        layout-align="space-between center"
        ng-repeat="exercise in contentMap[roomPointer].data.exercises"
      )  

        .question(
          ng-if="exercise.helpUsed == false"
        ) {{exercise.statement}}

        .question(
          ng-if="exercise.helpUsed == true"
        ) {{exercise.statement}} 
          p {{exercise.helper}}

        md-input-container
          input(
            type="text"
            ng-model="exercise.selectedAnswer"
            placeholder="Please write a word"
          )

        md-button.md-raised.md-warn(
        ng-click="exercise.helpUsed = true" 
        ) Get Help

      md-button.md-raised.md-warn(
        ng-click="findTheWordValidate(contentMap)" 
      ) Submit





  md-card(
    md-theme="dark-grey"
    ng-if="contentMap[roomPointer].data.type == 'Select the Keywords'"
  )
    md-card-title
      md-card-title-text
        span.md-headline
          | Challenge ({{contentMap[roomPointer].data.type}})

    md-card-content

      section(
        layout="row" 
        layout-align="space-between center"
        ng-repeat="exercise in contentMap[roomPointer].data.exercises"
      )  

        .question {{exercise.statement}}


      md-button.md-raised.md-warn(
        ng-click="selectTheKeywordsValidate(contentMap)" 
      ) Submit



